<!-- app/views/flats/index.html.erb -->
<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p><%= "All #{pluralize(@flats.count, 'flat')}." %></p>
    </div>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.picture_url.presence || 'https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200' %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flat-info">
              <div class="flat-info-capacity">
                <i class="fa-solid fa-people-line" style="margin-right:8px"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flat-info-price">
                <i class="fa-solid fa-euro-sign"  style="margin-right:16px"></i>
                <span><%= flat.price_per_night %></span>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'text-warning ms-3' %>
            <%= link_to 'Remove', flat_path(flat), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'text-danger ms-3' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
